generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  date        String
  imageUrl    String
  content     Json
}

model Contest {
  id              Int               @id @default(autoincrement())
  start_time      DateTime
  end_time        DateTime
  duration        Int
  description     String
  title           String
  ContestQuestion ContestQuestion[]
  UserContests    UserContests[]
}

model ContestQuestion {
  contestId  Int
  questionId Int
  Contest    Contest  @relation(fields: [contestId], references: [id])
  Question   Question @relation(fields: [questionId], references: [id])

  @@id([contestId, questionId])
}

model Question {
  id                 Int                  @id @default(autoincrement())
  title              String
  description        String
  testCases          String
  tags               String[]
  constraints        String               @default("")
  inputFormat        String
  ContestQuestion    ContestQuestion[]
  SubmissionQuestion SubmissionQuestion[]
}

model SubmissionQuestion {
  userId     Int
  verdict    Boolean
  time       DateTime @default(now())
  questionId Int
  code       String
  id         Int      @id @default(autoincrement())
  Question   Question @relation(fields: [questionId], references: [id])
  User       User     @relation(fields: [userId], references: [id])
}

model User {
  id                 Int                  @id @default(autoincrement())
  username           String               @unique
  password           String
  firstName          String
  lastName           String
  email              String
  rating_changed     Int[]
  SubmissionQuestion SubmissionQuestion[]
  UserContests       UserContests[]
}

model UserContests {
  userId    Int
  contestId Int
  Contest   Contest @relation(fields: [contestId], references: [id])
  User      User    @relation(fields: [userId], references: [id])

  @@id([userId, contestId])
}
